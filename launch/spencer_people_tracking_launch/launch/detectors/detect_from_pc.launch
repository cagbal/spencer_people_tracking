<launch>
    <arg name="upper_body" default="false"/>
    <arg name="pcl_detector" default="true"/> <!-- do not use at the same time with upper-body detector! -->
    <arg name="hog" default="false"/>
    <arg name="height_above_ground" default="1.6"/>  <!-- in meters, assumes a horizontally oriented RGB-D sensor; important for accurate detection -->
    <arg name="load_driver" default="false"/>  <!-- set to false if you are already running OpenNi from elsewhere -->
    <arg name="visualization" default="true"/> <!-- start Rviz with predefined configuration? -->
    <arg name="dummy_transforms" default="true"/> <!-- publish TF transform for sensor to groundplane -->
    <arg name="use_openni1" default="false"/> <!-- compatibility for Kinect v1 -->

    <arg name="ground_plane" value="/spencer/sensors/camera/ground_plane"/>

    <arg name="detection_id_increment" default="20"/>

    <!-- Run OpenNi driver if desired -->
    <group ns="spencer/sensors" if="$(arg load_driver)">
        <arg name="driver_launchfile" value="$(find openni2_launch)/launch/openni2.launch" unless="$(arg use_openni1)"/>  <!-- Asus Xtion Pro / Primesense-->
        <arg name="driver_launchfile" value="$(find openni_launch)/launch/openni.launch"   if="$(arg use_openni1)"/>      <!-- MS Kinect v1 -->

        <include file="$(arg driver_launchfile)">
          <arg name="camera" value="camera"/>
          <arg name="device_id" value="#1"/>
          <arg name="depth_registration" value="true"/>
        </include>
    </group>


    <!-- Set ground plane distance -->
    <rosparam param="/spencer/perception_internal/people_detection/ground_plane/distance" subst_value="true">$(arg height_above_ground)</rosparam>

    <!-- Set up dummy transforms into an imaginary robot and odom frame -->
    <group if="$(arg dummy_transforms)">
        <node name="tf_base_footprint" pkg="tf" type="static_transform_publisher" args="0 0 $(arg height_above_ground) 0 0 0 base_footprint camera_link 10"/>
        <node name="tf_odom"           pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 odom base_footprint 10"/>
    </group>

    <group ns="/spencer/perception_internal/people_detection">

        <!-- RWTH tf based groundplane -->
        <!--node pkg="rwth_ground_plane" type="ground_plane_tf_based_fixed" name="ground_plane_front_top" output="screen">
            <param name="base_footprint" value="base_footprint" type="string"/>
            <param name="camera_frame" value="camera_depth_optical_frame" type="string"/>
            <param name="ground_plane" value="$(arg ground_plane)" type="string"/>
            <param name="rate" value="30.0"/>
        </node-->

        <!-- Front RGB-D upper body -->
        <!--include file="$(find rwth_upper_body_detector)/launch/upper_body_detector.launch" ns="camera" if="$(arg upper_body)">
            <arg name="detected_persons" value="/spencer/perception_internal/detected_persons/camera/upper_body"/>
            <arg name="camera_namespace" value="/spencer/sensors/camera"/>
            <arg name="upper_body_detections" value="upper_body_detector/detections" />
            <arg name="upper_body_bb_centres" value="upper_body_detector/bounding_box_centres" />
            <arg name="upper_body_image" value="image" />
            <arg name="ground_plane" value="$(arg ground_plane)" />
            <arg name="detection_id_offset" value="3"/>
            <arg name="detection_id_increment" value="$(arg detection_id_increment)"/>
        </include-->

        <!-- Front PCL detector (publishes on same topic as upper-body detector) -->
        <group if="$(arg pcl_detector)">
            <remap from="/spencer/perception/detected_persons" to="/spencer/perception_internal/detected_persons/camera/upper_body"/> <!-- replaces upper-body detections -->
            <include file="$(find pcl_people_detector)/launch/start.launch" ns="camera">
                <arg name="input_topic" value="/camera/depth_registered/points"/>
                <arg name="camera_info_topic" value="/camera/rgb/camera_info"/>
                <arg name="base_link_frame" value="base_footprint"/>
                <arg name="detection_frame" value="pcl_people_detector_front_link"/>
                <arg name="ground_coeffs" value="0 0 -1 0"/>
                <arg name="detection_id_offset" value="11"/>
                <arg name="detection_id_increment" value="$(arg detection_id_increment"/>
            </include>
        </group>

        <!-- Front RGB-D HOG -->
        <!--include file="$(find rwth_ground_hog)/launch/ground_hog_with_GP.launch" ns="camera" if="$(arg hog)">
            <arg name="world_scale" value="0.001"/>
            <arg name="score_thresh" value="0.3"/>
            <arg name="detected_persons" value="/spencer/perception_internal/detected_persons/camera/hog"/>
            <arg name="camera_namespace" value="/spencer/sensors/camera"/>
            <arg name="detections" value="hog/detections" />
            <arg name="result_image" value="hog/image" />
            <arg name="ground_plane" value="$(arg ground_plane)" />
            <arg name="detection_id_offset" value="4"/>
            <arg name="detection_id_increment" value="$(arg detection_id_increment)"/>
        </include-->

    </group>

</launch>
